{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Frankfurter": {
    "BaseUrl": "https://api.frankfurter.app/",
    "TimeoutSeconds": 30,
    "PerTryTimeoutMs": 3000,
    "Retry": {
      "MaxRetries": 3,
      "MedianFirstDelayMs": 200
    },
    "Breaker": {
      "FailureThreshold": 0.5,
      "SamplingDurationSeconds": 30,
      "MinimumThroughput": 10,
      "BreakDurationSeconds": 30
    }
  }
}
